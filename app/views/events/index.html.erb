<%= link_to "Create a New Event", new_event_path%>

<%= link_to "Show user events", user_path(current_user)%>

<h1>Events List</h1>
<h2>Upcoming events</h2>
<ul>
  <% @upcoming_events.each do |event| %>
    <li>
      <%= link_to event.name, event %>
    </li>
  <% end %>
</ul>

<h2>Passed events</h2>
<ul>
  <% @passed_events.each do |event| %>
    <li>
      <%= link_to event.name, event %>
    </li>
  <% end %>
</ul>
